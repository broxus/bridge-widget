{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "unused-imports"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@stylistic/disable-legacy"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "rules": {
        "unused-imports/no-unused-imports-ts": "error"
    }
}
